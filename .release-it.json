{
  "git": {
    "requiredBranch": "develop",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "after:bump": [
      "npx auto-changelog -p --output changelog.md",
      "mv -f changelog.md ../sprite-animations-development/docfx_project/documentation/changelog.md",
      "docfx docfx_project/docfx.json"
    ],
    "after:release": [
      "git checkout main",
      "git merge develop",
      "git push origin main",
      "echo Successfully released ${name} v${version} to ${repo.repository}.",
      "git checkout develop"
    ]
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  }
}