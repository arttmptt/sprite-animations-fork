{
  "git": {
    "requiredBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": [
      "git checkout main",
      "git merge develop"
    ],
    "after:bump": [
      "npx auto-changelog -p"
    ],
    "after:release": [
      "echo Successfully released ${name} v${version} to ${repo.repository}.",
      "git checkout develop"
    ]
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  }
}