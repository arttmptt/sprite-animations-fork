{
  "git": {
    "requiredBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "after:bump": [
      "npx auto-changelog -p",
      "docfx docfx_project/docfx.json",
      "git add docs",
      "git commit -m 'API Documentation for v${version} generated'",
      "git push",
      "git checkout main",
      "git merge develop"
    ],
    "after:release": [
      "echo Successfully released ${name} v${version} to ${repo.repository}.",
      "git checkout develop"
    ]
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  }
}